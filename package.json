{
  "name": "@arnaud-barre/config-loader",
  "description": "Loads a TS config file via esbuild and caches transpilation",
  "type": "module",
  "private": true,
  "version": "0.7.3",
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.declarations.json && scripts/bundle.ts",
    "lint": "bun lint-ci --fix --cache",
    "lint-ci": "eslint src scripts --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --cache --ignore-path .gitignore --check '**/*.{js,ts,json,md}'",
    "release": "bun tsc && bun lint-ci && bun prettier-ci && bun run build && cd dist && bun publish"
  },
  "dependencies": {
    "esbuild": "^0.24"
  },
  "devDependencies": {
    "@arnaud-barre/eslint-config": "^5.1.0",
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.1.3",
    "@arnaud-barre/tnode": "^0.24.0",
    "@types/node": "^22.7.7",
    "eslint": "^9.13.0",
    "prettier": "3.0.3",
    "typescript": "~5.6"
  }
}
