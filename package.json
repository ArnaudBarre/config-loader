{
  "name": "@arnaud-barre/config-loader",
  "description": "Loads a TS config file via esbuild and caches transpilation",
  "type": "module",
  "private": true,
  "version": "0.7.6",
  "author": "Arnaud Barr√© (https://github.com/ArnaudBarre)",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.25"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.declarations.json && scripts/bundle.ts",
    "lint": "eslint --max-warnings 0",
    "prettier": "bun prettier-ci --write",
    "prettier-ci": "prettier --cache --ignore-path .gitignore --check '**/*.{js,ts,json,md}'",
    "release": "bun tsl && bun lint && bun prettier-ci && bun run build && cd dist && bun publish"
  },
  "prettier": {
    "experimentalOperatorPosition": "start",
    "plugins": [
      "@arnaud-barre/prettier-plugin-sort-imports"
    ]
  },
  "devDependencies": {
    "@arnaud-barre/eslint-config": "^6.1.2",
    "@arnaud-barre/prettier-plugin-sort-imports": "^0.2.2",
    "@arnaud-barre/tsl-config": "^0.1.1",
    "@types/node": "^22.18.4",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "tsl": "^1.0.23",
    "typescript": "~5.9"
  }
}
